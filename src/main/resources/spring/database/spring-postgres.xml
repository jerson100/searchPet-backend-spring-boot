<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<!-- Establecer las propiedades de conexion a Postgress -->
	<bean id="idDriverManagerDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.postgresql.Driver"/>
		<property name="url" value="jdbc:postgresql://localhost:5432/searchpet"></property>
        <property name="username" value="postgres"/>
        <property name="password" value="admin"/>
        <!--<property name="schema" value="isaevl"></property>-->
	</bean>
	
</beans>
